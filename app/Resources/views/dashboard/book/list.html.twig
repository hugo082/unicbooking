{% extends 'dashboard/table/layout.html.twig' %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_right">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('booking_app_book_new') }}" class="btn btn-lg btn-success">New</a>
                {% endif %}
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            {% if books is not null %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Book list</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="book_table" class="table table-striped table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Bkg No.</th>
                                <th>Dates</th>
                                <th>Services</th>
                                <th>Client</th>
                                <th>State</th>
                                <th class="table-action">Show</th>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <th class="table-action">Archive</th>
                                    <th class="table-action">Edit</th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for book in books %}
                                <tr>
                                    <td>{{ book.id }}</td>
                                    <td>{{ book.dates }}</td>
                                    <td>{{ include('dashboard/book/service/icon_view.html.twig', {products: book.products}) }}</td>
                                    <td>{{ book.client.name }}</td>
                                    <td><span class="label label-{{ book.state }}">{{ book.state(true) }}</span></td>
                                    <td class="table-action">
                                        <a href="{{ path('booking_app_book_show', {'id': book.id}) }}" class="btn btn-default">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <td class="table-action">
                                            <a href="{{ path('booking_app_book_archive', {'id': book.id}) }}" class="btn btn-danger" data-toggle="confirmation" data-title="Sure ?" data-popout="true">
                                                <span class="glyphicon glyphicon-folder-open"></span>
                                            </a>
                                        </td>
                                        <td class="table-action">
                                            <a href="{{ path('booking_app_book_edit', {'id': book.id}) }}" class="btn btn-default">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="table-empty" colspan="100%">No book yet.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if products is not null %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Mobile product list</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="product_table" class="table table-striped table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Prod No.</th>
                                <th>Date</th>
                                <th>Service</th>
                                <th>Client</th>
                                <th>Customers</th>
                                <th>Infos</th>
                                <th>Location</th>
                                <th>Time</th>
                                <th>State</th>
                                <th class="table-action">Show</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.dateTime }}</td>
                                    <td>{{ product.productType.service.name }}</td>
                                    <td>{{ product.book.client.name }}</td>
                                    <td>{{ product.customersRecap }}</td>
                                    <td>{{ product.information }}</td>
                                    <td>{{ product.location.name }}</td>
                                    <td>{{ product.time }}</td>
                                    <td><span class="label label-{{ product.execution.state }}">{{ product.execution.state(true) }}</span></td>
                                    <td class="table-action">
                                       <a href="{{ path('booking_app_product_show', {'id': product.id}) }}" class="btn btn-default">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="table-empty" colspan="100%">No book yet.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script>
        $(document).ready(function() {
            $('#book_table').DataTable( {
                "order": [[ 1, "asc" ]]
            } );
            $('#product_table').DataTable( {
                "order": [[ 1, "asc" ]]
            } );
        } );
    </script>
{% endblock %}