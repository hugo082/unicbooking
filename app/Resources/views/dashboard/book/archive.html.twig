{% extends 'dashboard/table/layout.html.twig' %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_right">
                <a href="{{ path('booking_app_book_new') }}" class="btn btn-lg btn-success">New</a>

            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Action Name</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table  id="datatable" class="table table-striped table-bordered table-condensed">
                            <thead>
                            <tr>
                                <th>Bkg No.</th>
                                <th>Dates</th>
                                <th>Services</th>
                                <th>Travel Agent</th>
                                <th>Show</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for book in books %}
                                <tr>
                                    <td>{{ book.id }}</td>
                                    <td>{{ book.dates }}</td>
                                    <td>{{ include('dashboard/book/service/icon_view.html.twig', {products: book.products}) }}</td>
                                    <td>{{ book.agent }}</td>
                                    <td>
                                        <a href="{{ path('booking_app_book_show', {'id': book.id}) }}" class="btn btn-default">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="table-empty" colspan="100%">No book yet.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}