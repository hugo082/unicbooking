{% extends 'dashboard/table/layout.html.twig' %}

{% block content %}
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_right">
                    <a href="{{ path('booking_app_book_new') }}" class="btn btn-lg btn-success">New</a>

                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Action Name</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table  id="datatable" class="table table-striped table-bordered table-condensed">
                                <thead>
                                <tr>
                                    <th>Bkg No.</th>
                                    <th>Dates</th>
                                    <th>Services</th>
                                    <th>State</th>
                                    <th>Archive</th>
                                    <th>Show</th>
                                    <th>Edit</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for book in books %}
                                    <tr>
                                        <td>{{ book.id }}</td>
                                        <td>{{ book.dates }}</td>
                                        <td>{{ include('dashboard/book/service/icon_view.html.twig', {products: book.products}) }}</td>
                                        <td><span class="label label-default">Waiting</span></td>
                                        <td>
                                            <a href="{{ path('booking_app_book_archive', {'id': book.id}) }}" class="btn btn-danger" data-toggle="confirmation" data-title="Sure ?" data-popout="true">
                                                <span class="glyphicon glyphicon-folder-open"></span>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('booking_app_book_show', {'id': book.id}) }}" class="btn btn-default">
                                                <span class="glyphicon glyphicon-search"></span>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="{{ path('booking_app_book_edit', {'id': book.id}) }}" class="btn btn-default">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td class="table-empty" colspan="100%">No book yet.</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}