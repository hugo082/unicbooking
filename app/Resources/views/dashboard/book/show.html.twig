{% extends 'dashboard/layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="{{ asset('bundles/booking/css/timepicker.min.css') }}">
{% endblock %}

{% block headscripts %}
    {{parent()}}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="{{ asset('bundles/booking/js/timepicker.min.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_right">
                <a href="{{ path('booking_app_book_index') }}" class="btn btn-lg btn-success">List</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('booking_app_book_new') }}" class="btn btn-lg btn-success">New</a>
                    <a href="{{ path('booking_app_book_edit', {id:book.id}) }}" class="btn btn-lg btn-success">Edit</a>
                {% endif %}
            </div>
        </div>

        <div class="clearfix"></div>


        <style>
            table .section {
                text-align: center;
                font-size: 13px;
                background-color: #f9f9f9;
            }
        </style>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Employee Information</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            {% form_theme form 'bootstrap_3_layout.html.twig' %}
                            {{ form_start(form) }}
                            {{ form_row(form.driver) }}
                            {{ form_row(form.greeter) }}
                            <button type="submit" class="btn btn-success">Save</button>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Agent Information</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table class="table col-lg-12 col-sm-12 col-xs-12">
                                <tr>
                                    <td>Name</td>
                                    <td>{{ book.agent.fullName }}</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>{{ book.agent.email }}</td>
                                </tr>
                                <tr>
                                    <td>Client</td>
                                    <td>{{ book.client }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Book Information</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table class="table col-lg-12 col-sm-12 col-xs-12">
                                <tr>
                                    <td>Creation</td>
                                    <td>{{ book.creationDate|date('d-M-Y') }}</td>
                                </tr>
                                <tr>
                                    <td>Dates</td>
                                    <td>{{ book.dates }}</td>
                                </tr>
                                <tr>
                                    <td>Duration</td>
                                    <td>{{ book.duration|date("%d day(s)") }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Book Facturation</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table class="table col-lg-12 col-sm-12 col-xs-12">
                                <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Taxe (%)</th>
                                    <th>Price unit.</th>
                                    <th>Amount (EUR)</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for product in book.products %}
                                    <tr>
                                        <td>{{ product.productType.name }}</td>
                                        <td>{{ product.productType.price.tva(book.client) }}</td>
                                        <td>{{ product.priceCount }}</td>
                                        <td>{{ product.price }}</td>
                                    </tr>
                                {% endfor %}
                                <tr class="table-recap">
                                    <td>Total</td>
                                    <td colspan="2">&nbsp;</td>
                                    <td>EUR {{ book.price }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            {% for product in book.products %}
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Product #{{ loop.index }} ({{ product.productType.service.type }})</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table class="table col-lg-12 col-sm-12 col-xs-12">
                                <tr>
                                    <td>Date</td>
                                    <td>{{ product.date|date('d-M-Y') }}</td>
                                </tr>
                                {% if product.productType.service.isAirport %}
                                    {{ include('dashboard/book/service/airport.html.twig', {product: product}) }}
                                {% elseif product.productType.service.isTrain %}
                                    {{ include('dashboard/book/service/train.html.twig', {product: product}) }}
                                {% elseif product.productType.service.isLimousine %}
                                    {{ include('dashboard/book/service/limousine.html.twig', {product: product}) }}
                                {% endif %}
                                <tr class="section">
                                    <td colspan="2">More Informations</td>
                                </tr>
                                <tr>
                                    <td>Baggages</td>
                                    <td>{{ product.baggages }}</td>
                                </tr>
                                <tr>
                                    <td>Customers</td>
                                    <td>{{ product.customersRecap }}</td>
                                </tr>
                                <tr>
                                    <td>Note</td>
                                    <td>{{ product.note }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/core/flight_api_loader.js') }}"></script>
{% endblock %}