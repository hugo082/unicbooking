{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Expert Webooking{% endblock %}

{% set cmp = (app.user ? app.user.compagny : NULL) %}
{% set logopath = asset('uploads/logos/' ~ (cmp ? app.user.compagny.logo : 'default.png')) %}
{% set cmpcolor = (cmp ? app.user.compagny.color : '#ff0000') %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="{{ asset('bundles/booking/css/datepicker.min.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/booking/css/shared.css') }}">
<style media="screen">
    .cmpcolor {
        color: {{cmpcolor}} !important
    }
    .back-cmpcolor {
        background-color: {{cmpcolor}} !important
    }
    .border-bot-cmpcolor {
        border-bottom-color: {{cmpcolor}} !important
    }
    .label-danger,
    .btn-danger { background-color: {{cmpcolor}}; border: none; }
</style>
{% endblock %}


{% block headscripts %}
{{parent()}}
<script src="{{ asset('bundles/booking/js/datepicker.min.js') }}"></script>
{% endblock %}

{% block body %}

<header class="navbar border-bot-cmpcolor" role="navigation" id="head">
    <a href="{{ path('homepage') }}" class="navbar-brand sec">
        <span class="text">UNIC WEBOOKING</span>
    </a>
    <span class="navbar-brand sec hidden-xs" id="info">
        <a href="{{ path('homepage') }}" class="navbar-brand sec text" id="logo">
            <span class="text">{{ 'header.title'|trans }}</span>
        </a>
    </span>
</header>

<main id="content">
    <div class="container">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="col-lg-12" id="head">

            <h5 style="height:35px">
            <style media="screen">
            .logo {
                vertical-align: middle;
                background-size: auto 100%;
                width: 30px;
                height:22px;
                display: inline-block;
                background-repeat: no-repeat;
                background-position: left center;
                background-image: url({{ logopath }});
            }
            </style>
            <span class="logo" style="float:left"></span>
            <span style="float:left">{{ app.user.username }}</span>
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
            {% if is_granted("ROLE_ADMIN") %}
            <a class="marg label label-info" href="{{ path('admin') }}">
                Admin
            </a>
            {% endif %}
            <a class="marg label label-info" href="{{ path('homepage') }}">
                Main
            </a>
        </h5>
    </div>
    {% endif %}
    {% block content %}{% endblock %}
</div>
</main>

{# {% include 'default/footer.html.twig' %} #}
{% endblock %}

{% block javascripts %}
{{parent()}}
{% endblock %}
