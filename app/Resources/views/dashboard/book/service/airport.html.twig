<table class="table col-lg-12 col-sm-12 col-xs-12">
    <tr>
        <td>Date</td>
        <td>{{ product.date|date('d-M-Y') }}</td>
    </tr>
    <tr class="section">
        <td colspan="2">Flight Details</td>
    </tr>
    <tr>
        <td>Code</td>
        <td>{{ product.airport.code }}</td>
    </tr>
    <tr>
        <td>Destination</td>
        <td>{{ product.airport.destination }}</td>
    </tr>
    <tr>
        <td>Time</td>
        <td>{{ product.airport.time }}</td>
    </tr>
    <tr class="section">
        <td colspan="2">More Informations</td>
    </tr>
    <tr>
        <td>Note</td>
        <td>{{ product.note }}</td>
    </tr>
</table>